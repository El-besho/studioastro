---
import type { Props } from 'astro';
import { cn } from '../lib/utils';
import { siteConfig } from '../config/site';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Breadcrumb } from '../components/semantic/breadcrumb';
import { Toaster } from '../components/ui/toaster';
import { SEO } from 'astro-seo';
import { SkipLink } from '../components/ui/skip-link';
import '../styles/globals.css';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
  keywords?: string[];
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title = `${siteConfig.name} | احصل على أفضل الخدمات المنزلية`,
  description = siteConfig.description,
  ogImage = siteConfig.ogImage,
  canonical = Astro.url.href,
  noindex = false,
  nofollow = false,
  keywords = siteConfig.keywords,
  author = siteConfig.name,
  publishedTime,
  modifiedTime
} = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: siteConfig.name,
  url: siteConfig.url,
  alternateName: 'Enqaz',
};

const orgJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: siteConfig.name,
  url: siteConfig.url,
  logo: `${siteConfig.url}/logo.png`,
};
---

<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={noindex}
      nofollow={nofollow}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: ogImage,
          url: canonical
        },
        optional: {
          description: description,
          locale: "ar_SA",
          siteName: siteConfig.name
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: "@enqaz",
        creator: "@enqaz",
        title: title,
        description: description,
        image: ogImage
      }}
      extend={{
        link: [
          { rel: "icon", href: "/favicon.ico" },
          { rel: "preconnect", href: "https://fonts.googleapis.com" },
          { rel: "preconnect", href: "https://fonts.gstatic.com", crossorigin: true },
          { rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=Cairo:wght@700;800&family=Noto+Sans+Arabic:wght@400;500&family=JetBrains+Mono:wght@400;500&display=swap" }
        ],
        meta: [
          { name: "viewport", content: "width=device-width, initial-scale=1.0" },
          { name: "generator", content: Astro.generator },
          { name: "keywords", content: keywords.join(', ') },
          { name: "author", content: author },
          { name: "theme-color", content: "white", media: "(prefers-color-scheme: light)" },
          { name: "theme-color", content: "black", media: "(prefers-color-scheme: dark)" },
          { name: "googlebot", content: "index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" },
          ...(publishedTime ? [{ name: "article:published_time", content: publishedTime }] : []),
          ...(modifiedTime ? [{ name: "article:modified_time", content: modifiedTime }] : [])
        ]
      }}
    />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(orgJsonLd)}></script>
  </head>
  <body class={cn(
    'min-h-screen bg-background font-body antialiased',
    'font-[--font-cairo] font-[--font-noto-sans-arabic] font-[--font-code]'
  )}>
    <SkipLink href="#main-content">تخطي إلى المحتوى الرئيسي</SkipLink>
    <Header />
    <Breadcrumb />
    <main><slot /></main>
    <Footer />
    <Toaster />
  </body>
</html>

<style is:global>
  :root {
    --font-cairo: 'Cairo', sans-serif;
    --font-noto-sans-arabic: 'Noto Sans Arabic', sans-serif;
    --font-code: 'JetBrains Mono', monospace;
  }
  
  .font-headline {
    font-family: var(--font-cairo);
  }
  
  .font-body {
    font-family: var(--font-noto-sans-arabic);
  }
  
  .font-code {
    font-family: var(--font-code);
  }
</style>