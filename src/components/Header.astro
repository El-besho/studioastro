---
import { Button } from './ui/button';
import {
  Menu,
  MapPin,
  ChevronDown,
  Search
} from 'lucide-react';
import { Logo } from './logo';
import { navLinks } from '../config/nav';
import { getAllCities, getCityBySlug, getServiceBySlug } from '../lib/services';
import HeaderClient from './HeaderClient.tsx';
import ServicesLocationsMenu from './ServicesLocationsMenu.tsx';
---

<!-- Skip Link for Accessibility -->
<a href="#main-content" class="skip-link focus:top-2">
  انتقل إلى المحتوى الرئيسي
</a>

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 shadow-sm glass-effect mobile-header">
  <div class="container flex h-16 items-center">
    <!-- Services & Locations Menu (Left Side) -->
    <div class="flex items-center gap-2">
      <ServicesLocationsMenu client:load />
    </div>

    <!-- Logo and Navigation -->
    <div class="flex-1 flex justify-center md:justify-start">
      <nav class="hidden items-center gap-6 text-sm md:flex" role="navigation" aria-label="الملاحة الرئيسية">
        <Logo />
        {navLinks.map((link) => (
          <a
            key={link.href}
            href={link.href}
            class={`font-headline font-medium transition-all duration-200 hover:text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-md px-3 py-2 touch-target ${
              link.className || 'text-foreground/70'
            }`}
            aria-label={link.label}
          >
            {link.label}
          </a>
        ))}
      </nav>
      <div class="md:hidden">
        <Logo />
      </div>
    </div>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-2">
      <HeaderClient />
    </div>
  </div>
</header>