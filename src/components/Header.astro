---
import { Button } from './ui/button';
import {
  Menu,
  MapPin,
  ChevronDown,
  Search
} from 'lucide-react';
import { Logo } from './logo';
import { navLinks } from '../config/nav';
import { getAllCities, getCityBySlug, getServiceBySlug } from '../lib/services';
import HeaderClient from './HeaderClient.tsx';
import ServicesLocationsMenu from './ServicesLocationsMenu.tsx';
---

<header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 shadow-sm glass-effect">
  <div class="container flex h-16 items-center">
    <!-- Services & Locations Menu (Left Side) -->
    <div class="flex items-center gap-2">
      <ServicesLocationsMenu client:load />
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden ml-2">
      <HeaderClient />
    </div>

    <!-- Desktop Navigation -->
    <div class="flex-1 flex justify-center md:justify-start">
      <nav class="hidden items-center gap-6 text-sm md:flex" role="navigation" aria-label="الملاحة الرئيسية">
        <Logo />
        {navLinks.map((link) => (
          <a
            key={link.href}
            href={link.href}
            class="font-headline font-medium text-foreground/70 transition-colors hover:text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-md px-2 py-1"
            aria-label={link.label}
          >
            {link.label}
          </a>
        ))}
      </nav>
      <div class="md:hidden">
        <Logo />
      </div>
    </div>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-2">
      <HeaderClient />
    </div>
  </div>
</header>